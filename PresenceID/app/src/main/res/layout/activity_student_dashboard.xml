<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <TextView
        android:id="@+id/helloS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_above="@id/CameraS"
        android:layout_marginVertical="20dp" />

    <ImageView android:id="@+id/CameraS"
        android:layout_height="80dp"
        android:layout_width="80dp"
        android:layout_centerInParent="true"
        android:layout_marginVertical="20dp"
        android:src="@drawable/ic_launcher_background"
        android:contentDescription="@string/todo">
    </ImageView>

    <Button
        android:id="@+id/StudentUpload"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/CameraS"
        android:text="@string/mark_attendance"
        android:textColor="@color/colorPrimary"
        android:background="@color/colorPrimaryDark"
        android:layout_marginVertical="20dp"
        android:paddingHorizontal="20dp"
        />


    <TextView
        android:id="@+id/showName"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/StudentUpload" />

    <TextView
        android:id="@+id/marked"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/showName" />


</RelativeLayout>